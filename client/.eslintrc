{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {},
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "no-var": ["error"],
    "no-param-reassign": ["error", { "props": false }],
    "no-underscore-dangle": ["error"],
    "max-len": ["error", {
      "code": 80,
      "ignoreTemplateLiterals": true
    }]
  }
}
