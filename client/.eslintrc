{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "no-loops"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {},
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "no-var": ["error"],
    "no-param-reassign": ["error", { "props": false }],
    "no-underscore-dangle": ["error"],
    "no-console": 0,
    "no-loops/no-loops": 2,
    "max-len": ["error", {
      "code": 80,
      "ignoreTemplateLiterals": true
    }]
  }
}
